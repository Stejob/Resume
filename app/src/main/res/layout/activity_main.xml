        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_app_large"
            android:id="@+id/btns_box">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/btn_career_highlights"
                    android:background="@drawable/btn_mian_act"
                    android:elevation="@dimen/cardview_default_elevation"
                    android:layout_margin="@dimen/margin_app_large"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_person_pin_24"
                    android:onClick="@{()->onBtnClicked.onMainActBtnClicked(utils.SECTIONS[0])}"/>

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/btn_professional_experiences"
                    android:background="@drawable/btn_mian_act"
                    android:elevation="@dimen/cardview_default_elevation"
                    android:layout_margin="@dimen/margin_app_large"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_highlight_24"
                    android:onClick="@{()->onBtnClicked.onMainActBtnClicked(utils.SECTIONS[1])}"/>

