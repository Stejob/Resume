<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_app_large">

        <TextView
            android:id="@+id/txt_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/margin_app_normal"
            android:layout_toStartOf="@id/ll_small_btns"
            android:paddingStart="@dimen/padding_app_normal"
            android:paddingTop="@dimen/padding_app_normal"
            android:paddingBottom="@dimen/padding_app_normal"
            android:textColor="@color/text_header_color"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_small_btns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/padding_app_low"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="@dimen/btn_small_sizes"
                android:layout_height="@dimen/btn_small_sizes"
                android:id="@+id/btn_show_image"
                android:layout_margin="@dimen/margin_app_very_low"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_image_20"
                android:elevation="@dimen/cardview_default_elevation"
                android:padding="@dimen/padding_app_low"/>

            <ImageView
                android:layout_width="@dimen/btn_small_sizes"
                android:layout_height="@dimen/btn_small_sizes"
                android:id="@+id/btn_download"
                android:layout_margin="@dimen/margin_app_very_low"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_download_20"
                android:elevation="@dimen/cardview_default_elevation"
                android:padding="@dimen/padding_app_low"/>

        </LinearLayout>

    </RelativeLayout>

</layout>