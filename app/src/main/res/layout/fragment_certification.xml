<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="onClick"
            type="com.example.myresume.interfaces.OnFragBtnClicks" />
    </data>

    <RelativeLayout
        tools:context=".views.fragments.CertificationFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_app_extra_large"
        android:layout_marginTop="@dimen/margin_app_big"
        android:layout_marginBottom="@dimen/margin_app_low"
        android:background="@drawable/bd_view_pager">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_app_large"
            android:layout_marginEnd="@dimen/margin_app_large">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_app_large"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/certification_frag_hight"
                            android:layout_height="@dimen/certification_frag_hight"
                            android:id="@+id/img_crtf_1"
                            android:layout_gravity="center"
                            android:onClick="@{(view) -> onClick.onClickListener(view.id)}"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_crtf_1"
                            android:gravity="center"
                            android:text="@string/certification_1"
                            android:drawableStart="@drawable/ic_read_more_20"
                            android:drawablePadding="@dimen/padding_app_low"
                            android:onClick="@{(view) -> onClick.onClickListener(view.id)}"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/certification_frag_hight"
                            android:layout_height="@dimen/certification_frag_hight"
                            android:id="@+id/img_crtf_2"
                            android:layout_gravity="center"
                            android:onClick="@{(view) -> onClick.onClickListener(view.id)}"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_crtf_2"
                            android:gravity="center"
                            android:text="@string/certification_2"
                            android:drawableStart="@drawable/ic_read_more_20"
                            android:drawablePadding="@dimen/padding_app_low"
                            android:onClick="@{(view) -> onClick.onClickListener(view.id)}"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_crtf_3"
                            android:layout_width="@dimen/certification_frag_hight"
                            android:layout_height="@dimen/certification_frag_hight"
                            android:layout_gravity="center"
                            android:onClick="@{(view) -> onClick.onClickListener(view.id)}" />

                        <TextView
                            android:id="@+id/txt_crtf_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_read_more_20"
                            android:drawablePadding="@dimen/padding_app_low"
                            android:gravity="center"
                            android:text="@string/certification_3"
                            android:onClick="@{(view) -> onClick.onClickListener(view.id)}"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/certification_frag_hight"
                            android:layout_height="@dimen/certification_frag_hight"
                            android:id="@+id/img_crtf_4"
                            android:layout_gravity="center"
                            android:onClick="@{(view) -> onClick.onClickListener(view.id)}"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_crtf_4"
                            android:gravity="center"
                            android:text="@string/certification_4"
                            android:drawableStart="@drawable/ic_read_more_20"
                            android:drawablePadding="@dimen/padding_app_low"
                            android:onClick="@{(view) -> onClick.onClickListener(view.id)}"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fifth_frag_header"
        android:textStyle="bold"
        android:textColor="@color/text_header_color"
        android:background="?android:colorBackground"
        android:id="@+id/txt_header"
        android:layout_marginStart="@dimen/margin_frag_header"
        android:paddingLeft="@dimen/padding_app_normal"
        android:paddingRight="@dimen/padding_app_normal"/>

        <ImageView
        android:layout_width="@dimen/iv_icon_size"
        android:layout_height="@dimen/iv_icon_size"
        android:id="@+id/icon"
        android:background="@drawable/bg_icon_fragment"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_person_pin_40"
        android:layout_marginLeft="@dimen/margin_app_very_large"
        android:paddingTop="7dp"
        android:paddingRight="@dimen/padding_app_low"
        android:paddingLeft="@dimen/padding_app_low"
        android:paddingBottom="@dimen/padding_app_low"
        android:scaleType="fitCenter"/>

    </RelativeLayout>

</layout>