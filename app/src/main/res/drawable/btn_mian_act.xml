<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_selected="false">
        <shape>
            <corners android:radius="@dimen/btn_corners"/>
            <gradient android:angle="-135"
                android:startColor="@color/main_act_header_blue"
                android:endColor="@color/main_act_header_black"/>
        </shape>
    </item>

    <item
        android:state_selected="true">
        <shape>
            <corners android:radius="@dimen/btn_corners"/>
            <gradient android:angle="-135"
                android:startColor="@color/btn_state_pressed_yellow_dark"
                android:endColor="@color/btn_state_pressed_yellow_light"/>
        </shape>
    </item>
</selector>